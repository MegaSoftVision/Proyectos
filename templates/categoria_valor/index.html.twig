{% extends 'base.html.twig' %}

{% block title %}Listado de Categorias{% endblock %}

{% block body %}
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
      <div class="page-header" id="top">
        <div class="row justify-content-between mb-4">
          <h2 class="pageheader-title col-lg-4 col-md-9 col-sm-9 col-4">
          Valores - Listado de Categorias</h2>
          
        </div>
        <div class="page-breadcrumb">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item">Valores</li>
              <li class="breadcrumb-item">Listado de Categorias</li>
            </ol>
          
          </nav>
        </div>
      </div>
    </div>
  </div>
<div class="row">
                    <!-- ============================================================== -->
                    <!-- data table  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-9 col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Categor√≠a valor</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example" class="table table-striped table-bordered second" style="width:100%">
                                        <thead>
                                            <tr>
                                                
                                                <th>Id</th>
                                                <th>Descripcion</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for categoria_valor in categoria_valors %}
                                                <tr>
                                                    <td>{{ categoria_valor.id }}</td>
                                                    <td>{{ categoria_valor.descripcion }}</td>
                                                    <td>
                                                        
                                                        <a href="{{ path('categoria_valor_edit', {'id': categoria_valor.id}) }}">Editar</a>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="3">No se encuentro Categorias</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                
                                                <th>Id</th>
                                                <th>Descripcion</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
  {{ include('categoria_encuesta/_form.html.twig') }}
  </div>

    

{% endblock %}
