<div class="row">
  <div class="col-xl-10">
    <!-- ============================================================== -->
    <!-- pageheader  -->
    <!-- ============================================================== -->
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header" id="top">
          <h2 class="pageheader-title">Nueva Encuesta</h2>
          <div class="page-breadcrumb">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{path('encuesta_index')}}" class="breadcrumb-link">Encuestas</a></li>
                <li class="breadcrumb-item">Nueva Encuesta</li>
                
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <!-- ============================================================== -->
    <!-- end pageheader  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- basic form  -->
    <!-- ============================================================== -->
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="section-block" id="basicform"></div>
        <div class="card">
          <div class="card-body">
            <div class="row justify-content-end">
              <div class="col"></div>
              <div class="col-1">
                  <button type="button" class="btn btn-xs btn-primary" data-toggle="popover" title="¿Necesitas ayuda?" data-content="Descripción de la encuesta: Introduce un título que describa tu encuesta.
                  
Banner de la encuesta: Sube un archivo que puedas utilizar como banner de presentación para tu encuesta."><i class="fas fa-question"></i></button>
              </div>
          </div>
            {{ form_start(form) }}
            <div class="form-group">
              {{ form_label(form.descripcion, 'Descripción de la encuesta') }}
              {{ form_widget(form.descripcion, {'attr': {'class': 'form-control form-control-lg', 'placeholder':'Descripcion de la encuesta'}}) }}
            </div>
            
            <div class="form-group">
              {{ form_label(form.banner, 'Banner de la encuesta') }}
              {{ form_widget(form.banner, {'attr': {'class': 'form-control form-control-lg', 'placeholder':'Banner de la encuesta'}}) }}
            </div>
            
            
            <button class="btn btn-success">{{ button_label|default('Crear') }}</button>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic form  -->
    <!-- ============================================================== -->
  </div>
</div>
  
  
