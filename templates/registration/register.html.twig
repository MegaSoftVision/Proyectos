{% extends 'base.html.twig' %}

{% block title %}Registrar un Usuario{% endblock %}

{% block body %}

<div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="page-header">
                            <h2 class="pageheader-title">Nuevo Usuario </h2>
                            <div class="page-breadcrumb">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        
                                        <li class="breadcrumb-item"><a href="{{path('user_index')}}" class="breadcrumb-link">Listado de Usuarios</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Registro</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- end pageheader -->
                <!-- ============================================================== -->    
                    <div class="row">
                        <!-- ============================================================== -->
                        <!-- basic form -->
                        <!-- ============================================================== -->
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="card">
                                <h5 class="card-header">Registrar Usuario</h5>
                                <div class="card-body">
                                    {{ form_start(registrationForm) }}
                                        {% for flashError in app.flashes('verify_email_error') %}
                                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                                        {% endfor %}
                                        <div class="form-group">
                                        {{ form_label(registrationForm.email, 'Dirección de correo electrónico') }}
                                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'data-parsley-trigger': 'change', 'placeholder':'Ingresa tu correo electrónico', 'autocomplete': 'off'}}) }}
                                        </div>
                                        <div class="form-group">
                                        {{ form_label(registrationForm.plainPassword, 'Contraseña') }}
                                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder':'Contraseña'}}) }}

                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-sm-6 pb-2 pb-sm-4 pb-lg-0 pr-0"></div>
                                            <div class="col-sm-6 pl-0">
                                                <p class="text-right">
                                                    <button type="submit" class="btn btn-space btn-primary">Enviar</button>
                                                    <button class="btn btn-space btn-secondary">Cancelar</button>
                                                </p>
                                            </div>
                                        </div>
                                    {{ form_end(registrationForm) }}
                                </div>
                            </div>
                        </div>
                        <!-- ============================================================== -->
                        <!-- end basic form -->
                        <!-- ============================================================== -->
                    </div>
        
        
  
{% endblock %}
